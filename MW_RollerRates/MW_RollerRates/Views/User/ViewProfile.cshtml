@model MW_RollerRates.Models.UserProfileViewModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Profile page";
}

<div class="content bg_white_block">
    <div class="row">
        <div class="col-md-6">
            <h1>Username : @Model.DisplayName</h1>
            <h2>Email : @Model.Email</h2>
            <h3>Description : @Model.Description</h3>
            <h4>User Checkins</h4>
        </div>
    </div>
</div>

<div class="row">
    <table class="table table-striped">
        <thead class="thead-ligh">
            <tr>
                <th>
                    Rollercoaster Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RollerCoasters)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>